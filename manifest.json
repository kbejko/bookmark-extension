{
  "manifest_version": 2,
  "name": "Bookmark Extension",
  "short_name": "All your bookmarks in new tab",
  "description": "This is another!!! bookmark extension",
  "version": "1.0.0",
  "author": "Klajdi Bejko @klazhdi",

  "icons": {
    "19": "Butterfly.png",
    "38": "Butterfly.png",
    "48": "Butterfly.png",
    "128": "Butterfly.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "Butterfly.png",
      "38": "Butterfly.png"
    },
    "default_title": "Open a new tab to view your bookmarks."
  },

  "chrome_url_overrides" : {
    "newtab": "index.html"
  },

  "background": {
    "page": "index.html",
    "persistent": false
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "permissions": ["activeTab"]
}
